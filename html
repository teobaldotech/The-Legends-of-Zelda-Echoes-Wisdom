<h2>üéÆ Plano de Treino Gamer</h2>

<section aria-label="Filtros para treinos">
  <label for="treinoFilter">Filtrar por tipo:</label>
  <select id="treinoFilter" aria-label="Filtrar por tipo de treino" onchange="filtrarTreinos()">
    <option value="todos">Todos</option>
    <option value="mira">Mira</option>
    <option value="estrategia">Estrat√©gia</option>
    <option value="reflexos">Reflexos</option>
    <option value="coordenacao">Coordena√ß√£o</option>
  </select>

  <input type="text" id="buscaTexto" placeholder="üîç Buscar por nome ou descri√ß√£o..." oninput="filtrarTreinos()" />
</section>

<p id="filtroStatus" aria-live="polite"></p>

<table id="treinoTable" aria-label="Tabela de treinos gamer">
  <caption class="sr-only">Tabela com treinos gamer, emojis e objetivos principais</caption>
  <thead>
    <tr>
      <th>Emoji</th>
      <th>Treino</th>
      <th>Descri√ß√£o</th>
      <th>Objetivo</th>
      <th>Dura√ß√£o</th>
    </tr>
  </thead>
  <tbody id="treinoBody">
    <!-- Linhas geradas via JavaScript -->
  </tbody>
