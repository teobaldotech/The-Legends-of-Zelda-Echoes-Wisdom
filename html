      efeito: "Cria uma barreira tempor√°ria que cura ao bloquear ataques",
      tipo: "suporte",
      regiao: "Santu√°rios, Dungeons com armadilhas"
    },
    {
      combinacao: "‚õèÔ∏è Picareta + üå™Ô∏è Ventilador",
      efeito: "Permite cavar √°reas inst√°veis com remo√ß√£o r√°pida de detritos",
      tipo: "exploracao",
      regiao: "Cavernas colapsadas, Zonas s√≠smicas"
    },
    {
      combinacao: "üî• Canh√£o + üßä Bloco de Gelo",
      efeito: "Dispara proj√©teis congelantes com dano em √°rea",
      tipo: "combate",
      regiao: "Campos abertos, Chefes elementais"
    }
  ];

  function capitalizar(texto) {
    return texto.charAt(0).toUpperCase() + texto.slice(1);
  }

  function gerarTabela() {
    const corpoTabela = document.getElementById("comboBody");
    corpoTabela.innerHTML = ""; // Limpa antes de gerar

    combinacoes.forEach(combo => {
      const tr = document.createElement("tr");
      tr.dataset.tipo = combo.tipo;

      tr.innerHTML = `
        <td>${combo.combinacao}</td>
        <td>${combo.efeito}</td>
        <td>${capitalizar(combo.tipo)}</td>
        <td>${combo.regiao}</td>
      `;

      corpoTabela.appendChild(tr);
    });
  }

  function filtrarCombos() {
    const tipoSelecionado = document.getElementById('comboFilter').value;
    const textoBusca = document.getElementById('buscaTexto').value.toLowerCase();
    const linhas = document.querySelectorAll('#comboTable tbody tr');

    let visiveis = 0;

    linhas.forEach(row => {
      const tipo = row.dataset.tipo;
      const combinacao = row.children[0].textContent.toLowerCase();
      const efeito = row.children[1].textContent.toLowerCase();

      const correspondeTipo = (tipoSelecionado === 'todos' || tipo === tipoSelecionado);
      const correspondeTexto = (combinacao.includes(textoBusca) || efeito.includes(textoBusca));

      if (correspondeTipo && correspondeTexto) {
        row.classList.remove('hide');
        row.classList.add('show');
        visiveis++;
      } else {
        row.classList.remove('show');
        row.classList.add('hide');
      }
    });

    const texto = textoBusca ? ` contendo "${textoBusca}"` : '';
    const tipoTexto = tipoSelecionado === 'todos' ? 'todas as combina√ß√µes' : `combina√ß√µes do tipo "${tipoSelecionado}"`;
    document.getElementById('filtroStatus').textContent = `Mostrando ${visiveis} ${tipoTexto}${texto}`;
  }

  window.onload = () => {
    gerarTabela();
    filtrarCombos();
  };
</script>

