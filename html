  <!-- Quiz Interativo -->
  <h2>🎮 Quiz: Qual Eco usar?</h2>
  <p>Qual Eco é ideal para atravessar abismos?</p>
  <button onclick="checkAnswer('a')">A) Bloco de Pedra</button>
  <button onclick="checkAnswer('b')">B) Piso Voador</button>
  <button onclick="checkAnswer('c')">C) Trampolim</button>
  <p id="quizResult"></p>

  <!-- Filtro de Ecos -->
  <h2>🔍 Filtrar Ecos por Função</h2>
  <select onchange="filterEcos(this.value)">
