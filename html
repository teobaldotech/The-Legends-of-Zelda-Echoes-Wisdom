<script>
  const treinos = [
    { emoji: "üßò", nome: "Alongamento R√°pido", desc: "Alongamento de m√£os, punhos, ombros e pesco√ßo", tipo: "reflexos", objetivo: "Prepara√ß√£o f√≠sica", duracao: "5 min" },
    { emoji: "‚úä", nome: "Exerc√≠cio de Dedos", desc: "Apertar bola de borracha ou digitar r√°pido", tipo: "coordenacao", objetivo: "Coordena√ß√£o manual", duracao: "5 min" },
    { emoji: "üéØ", nome: "Aquecimento de Mira", desc: "Pr√°tica de mira em alvos est√°ticos", tipo: "mira", objetivo: "Precis√£o", duracao: "5 min" },
    { emoji: "üèπ", nome: "Tracking", desc: "Seguir inimigos em movimento", tipo: "mira", objetivo: "Rastreamento", duracao: "5-10 min" },
    { emoji: "‚ö°", nome: "Flick Shots", desc: "Treino de precis√£o r√°pida", tipo: "mira", objetivo: "Rea√ß√£o r√°pida", duracao: "5-10 min" },
    { emoji: "üì∫", nome: "Replay Analysis", desc: "Revis√£o de partidas e decis√µes", tipo: "estrategia", objetivo: "Estrat√©gia", duracao: "15 min" },
    { emoji: "üó∫Ô∏è", nome: "Map Awareness", desc: "Estudo de mapas, posi√ß√µes e timings", tipo: "estrategia", objetivo: "Posicionamento", duracao: "15 min" },
    { emoji: "‚è±Ô∏è", nome: "Mini-jogos de Reflexo", desc: "Treinos online de rea√ß√£o r√°pida", tipo: "reflexos", objetivo: "Reflexo r√°pido", duracao: "10 min" },
    { emoji: "üéµ", nome: "Jogos de Ritmo", desc: "Coordena√ß√£o m√£o-olho com jogos de ritmo", tipo: "coordenacao", objetivo: "Coordena√ß√£o", duracao: "15 min" },
    { emoji: "üéÆ", nome: "Partidas de Treino", desc: "Aplicar t√©cnicas em partidas reais", tipo: "estrategia", objetivo: "Execu√ß√£o pr√°tica", duracao: "1-2 h" }
  ];

  function capitalizar(texto) {
    return texto.charAt(0).toUpperCase() + texto.slice(1);
  }

  function gerarTabela() {
    const corpoTabela = document.getElementById("treinoBody");
    corpoTabela.innerHTML = "";

    treinos.forEach(treino => {
      const tr = document.createElement("tr");
      tr.dataset.tipo = treino.tipo;
      tr.innerHTML = `
        <td>${treino.emoji}</td>
        <td>${treino.nome}</td>
        <td>${treino.desc}</td>
        <td>${treino.objetivo}</td>
        <td>${treino.duracao}</td>
      `;
      corpoTabela.appendChild(tr);
    });
  }

  function removerAcentos(str) {
    return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
  }

  function filtrarTreinos() {
    const tipoSelecionado = document.getElementById('treinoFilter').value;
    const textoBusca = removerAcentos(document.getElementById('buscaTexto').value.toLowerCase());
    const linhas = document.querySelectorAll('#treinoTable tbody tr');

    let visiveis = 0;

    linhas.forEach(row => {
      const tipo = row.dataset.tipo;
      const nome = removerAcentos(row.children[1].textContent.toLowerCase());
      const desc = removerAcentos(row.children[2].textContent.toLowerCase());

      const correspondeTipo = (tipoSelecionado === 'todos' || tipo === tipoSelecionado);
      const correspondeTexto = (nome.includes(textoBusca) || desc.includes(textoBusca));

      if (correspondeTipo && correspondeTexto) {
        row.classList.remove('hide');
        row.classList.add('show');
        visiveis++;
      } else {
        row.classList.remove('show');
        row.classList.add('hide');
      }
    });

    let texto = textoBusca ? ` contendo "${textoBusca}"` : '';
    let tipoTexto = tipoSelecionado === 'todos' ? 'todos os treinos' : `treinos do tipo "${capitalizar(tipoSelecionado)}"`;

    document.getElementById('filtroStatus').textContent = visiveis
      ? `Mostrando ${visiveis} ${tipoTexto}${texto}`
      : "Nenhum treino encontrado.";
  }

  window.onload = () => {
    gerarTabela();
    filtrarTreinos();
  };
</script>

