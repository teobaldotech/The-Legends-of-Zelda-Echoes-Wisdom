<!-- Script com animaÃ§Ã£o e filtro -->
<script>
  function filtrarCombos(tipo) {
    document.querySelectorAll('#comboTable tbody tr').forEach(row => {
      row.classList.remove('show');
      if (tipo === 'todos' || row.dataset.tipo === tipo) {
        row.style.display = '';
        void row.offsetWidth; // Reinicia a animaÃ§Ã£o
        row.classList.add('show');
      } else {
        row.style.display = 'none';
      }
    });
  }
</script>